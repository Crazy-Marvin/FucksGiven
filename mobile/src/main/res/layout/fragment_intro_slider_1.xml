<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:orientation="vertical"
    tools:context="rocks.poopjournal.fucksgiven.activity.fragment.IntroSliderFragment">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_diary"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/tv_keep_diary"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/tv_keep_diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keep_a_diary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerInParent="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_keep_diary"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/keep_a_personal_diary_without_writing_down_a_single_word"/>
</RelativeLayout>
